{
  "name": "@fs0414/memoli",
  "version": "0.0.1",
  "description": "CLI markdown memo manager",
  "type": "module",
  "bin": {
    "memoli": "./bin/memoli"
  },
  "files": [
    "bin",
    "scripts/postinstall.js"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "build": "bun run scripts/build.ts",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint 'src/**/*.ts' 'index.ts'",
    "lint:fix": "oxlint 'src/**/*.ts' 'index.ts' --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs0414/memoli.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20251209.1",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.4"
  }
}
